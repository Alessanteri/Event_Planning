<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= error_tag f, :email %>
  <%= if @user_role.role == "admin" do %>
    <%= label f, :role %>
    <%= text_input f, :role %>
    <%= error_tag f, :role %>
  <% end %>
  <div>
    <%= submit "Save" %>
  </div>
<% end %>
