<h1>Show Event</h1>

<ul>

  <li>
    <strong> start date:</strong>
    <%= @event.start_date %>
  </li>

  <li>
    <strong> repetition:</strong>
    <%= @event.repetition %>
  </li>
  <%= content_tag :p, hidden: true, id: "id_event" do %>
  <%= @event.id %>
  <% end %>
  <span><%= link "Edit", to: Routes.user_event_path(@conn, :edit, @user, @event) %></span>
  <span><%= link "Delete", to: Routes.user_event_path(@conn, :delete, @user, @event), method: :delete, data: [confirm: "Are you sure?"], id: "delete" %></span>

</ul>
<span><%= link "Back", to: Routes.user_event_path(@conn, :my_schedule, @user) %></span>
