<h1>Listing Events</h1>
<table>
  <thead>
    <tr>
      <th> Name</th>
      <th> Start Date</th>
      <th> Repetition</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
  <%= form_for @conn, Routes.user_event_path(@conn, :my_schedule, @user), [as: :page, class: "form-signin"], fn f -> %>
    <div>
      <%= select f, :categories_id, @categories %>
    </div>
    <%= submit "print", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

<%= for event <- @event_without_duplicate do %>
    <tr id=<%= event.id %>>
      <td><%= event.name %></td>
      <td><%= event.start_date %></td>
      <%= if event.enabled do%>
        <%= if event.repetition != nil do%>
          <td><%= event.repetition %></td>
        <%= else %>
          <td>No repetition</td>
        <% end %>
      <% else %>
        <td>No repetition</td>
      <% end %>

      <td>
        <span><%= link "Show", to: Routes.user_event_path(@conn, :show, @user, event) %></span>
        <span><%= link "Edit", to: Routes.user_event_path(@conn, :edit, @user, event) %></span>
        <span><%= link "Delete", to: Routes.user_event_path(@conn, :delete, @user, event), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>

    </tr>

<% end %>
<%= for event <- @event_with_duplicate do %>
    <tr bgcolor="red">
      <td><%= event.name %></td>
      <td><%= event.start_date %></td>
      <%= if event.enabled do%>
        <%= if event.repetition != nil do%>
          <td><%= event.repetition %></td>
        <%= else %>
          <td>No repetition</td>
        <% end %>
      <% else %>
        <td>No repetition</td>
      <% end %>
      <td>
        <span><%= link "Show", to: Routes.user_event_path(@conn, :show, @user, event) %></span>
        <span><%= link "Edit", to: Routes.user_event_path(@conn, :edit, @user, event) %></span>
        <span><%= link "Delete", to: Routes.user_event_path(@conn, :delete, @user, event), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>

    </tr>

<% end %>

  </tbody>
</table>

<span><%= link "New Event", to: Routes.user_event_path(@conn, :new, @user) %></span>
<p><%= link "Next Event", to: Routes.user_event_path(@conn, :next_event, @user) %></p>
<%= if @user.role == "admin" do %>
  <span><%= link "Show User", to: Routes.user_path(@conn, :index) %></span>
<% end %>

<%= form_for @conn, "my_schedule", [multipart: true], fn f -> %>

  <div class="form-group">
    <label>Documents</label>
    <%= file_input f, :file, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
